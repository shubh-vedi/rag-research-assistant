# ──────────────────────────────────────────────
# RAG Research Assistant — Environment Variables
# ──────────────────────────────────────────────

# OpenAI (Required - for embeddings & generation)
OPENAI_API_KEY=sk-your-openai-api-key

# Cohere (Required - for reranking)
COHERE_API_KEY=your-cohere-api-key

# Tavily (Required - for web search)
TAVILY_API_KEY=tvly-your-tavily-api-key


# ChromaDB (Default vector store)
CHROMA_PERSIST_DIR=./data/chroma_db
CHROMA_COLLECTION_NAME=research_docs

# Application Settings
APP_HOST=0.0.0.0
APP_PORT=8000
LOG_LEVEL=info
UPLOAD_DIR=./data/uploads

# LLM Settings
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.1
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=512
